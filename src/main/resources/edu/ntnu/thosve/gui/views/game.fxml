<BorderPane fx:id="window" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="720.0" minWidth="1280.0" onKeyPressed="#onKeyPress" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ntnu.thosve.gui.controllers.GameController">
   <center>
      <Pane fx:id="canvasParent" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="881.0" width="1920.0" />
         </children>
      </Pane>
   </center>
   <bottom>
      <GridPane fx:id="hud" prefHeight="200.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <GridPane>
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <FontIcon iconLiteral="cil-caret-top" iconSize="32" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                  <Label fx:id="army1Label" text="ARMY 1 NAME" GridPane.columnSpan="4" GridPane.halignment="CENTER">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <StackPane GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                     <children>
                        <ProgressBar fx:id="army1HealthBar" prefHeight="35.0" prefWidth="524.0" progress="0.0" />
                        <Label fx:id="army1HealthLabel" />
                     </children>
                  </StackPane>
                  <Button mnemonicParsing="false" onAction="#army1AddUnits" text="Add units" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army1RemoveUnit" text="Remove unit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army1ClearArmy" text="Clear army" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army1SaveArmy" text="Save army" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army1LoadArmy" text="Load army" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                  <Button fx:id="army1SetFormation" mnemonicParsing="false" text="Set Formation" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <GridPane layoutX="10.0" layoutY="10.0" GridPane.columnIndex="2">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <FontIcon iconLiteral="cil-caret-top" iconSize="32" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                  <Label fx:id="army2Label" text="ARMY 2 NAME" GridPane.columnSpan="4" GridPane.halignment="CENTER">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <StackPane GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                     <children>
                        <ProgressBar fx:id="army2HealthBar" prefHeight="35.0" prefWidth="524.0" progress="0.0" />
                        <Label fx:id="army2HealthLabel" />
                     </children>
                  </StackPane>
                  <Button mnemonicParsing="false" onAction="#army2AddUnits" text="Add units" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army2RemoveUnit" text="Remove unit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army2ClearArmy" text="Clear army" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army2SaveArmy" text="Save army" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#army2LoadArmy" text="Load army" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER" />
                  <Button fx:id="army2SetFormation" mnemonicParsing="false" text="Set Formation" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
               </children>
            </GridPane>
            <GridPane fx:id="timeControl" GridPane.columnIndex="1">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="70.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Day 1 | Hour 1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <GridPane prefWidth="250.0" style="-fx-border-color: transparent;" GridPane.rowIndex="1">
                    <columnConstraints>
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Button fx:id="decreaseSpeedButton" disable="true" mnemonicParsing="false" onAction="#onDecreaseSpeed" style="-fx-background-radius: 50%; -fx-border-radius: 50%;">
                           <graphic>
                              <FontIcon iconLiteral="cil-media-skip-backward" iconSize="32" />
                           </graphic>
                        </Button>
                        <Label fx:id="speedIndicator" text="1.00x" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Button fx:id="increaseSpeedButton" disable="true" mnemonicParsing="false" onAction="#onIncreaseSpeed" style="-fx-background-radius: 50%; -fx-border-radius: 50%;" GridPane.columnIndex="2">
                           <graphic>
                              <FontIcon iconLiteral="cil-media-skip-forward" iconSize="32" />
                           </graphic>
                        </Button>
                     </children>
                  </GridPane>
                  <Button fx:id="simulateButton" mnemonicParsing="false" onAction="#onSimulateButtonPress" text="Simulate" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER" />
                  <Button fx:id="pauseButton" disable="true" mnemonicParsing="false" onAction="#pausePlayButton" style="-fx-background-radius: 50%; -fx-border-radius: 50%" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1">
                     <graphic>
                        <FontIcon fx:id="pauseButtonIcon" iconLiteral="cil-media-pause" iconSize="32" />
                     </graphic>
                  </Button>
               </children>
            </GridPane>
         </children>
      </GridPane>
   </bottom>
   <stylesheets>
      <URL value="@../styles/style.css" />
      <URL value="@../styles/game.css" />
   </stylesheets>
</BorderPane>
